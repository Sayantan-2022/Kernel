<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/event_card"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="8dp"
    app:cardElevation="4dp"
    android:layout_margin="8dp"
    tools:context=".UI.Fragments.HomeFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Event Name -->
        <TextView
            android:id="@+id/tv_event_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Event Name"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@android:color/black"
            android:layout_marginBottom="8dp" />

        <!-- Event Date -->
        <TextView
            android:id="@+id/tv_event_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Date: April 10, 2025"
            android:textSize="14sp"
            android:textColor="@android:color/black"
            android:layout_marginBottom="4dp" />

        <!-- Event Time -->
        <TextView
            android:id="@+id/tv_event_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Time: 4:00 PM - 6:00 PM"
            android:textSize="14sp"
            android:textColor="@android:color/black"
            android:layout_marginBottom="4dp" />

        <!-- Event Venue -->
        <TextView
            android:id="@+id/tv_event_venue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Venue: Main Auditorium, IIT Dhanbad"
            android:textSize="14sp"
            android:textColor="@android:color/black"
            android:layout_marginBottom="8dp" />

        <!-- Event Brief Description -->
        <TextView
            android:id="@+id/tv_event_detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Brief detail about the event goes here."
            android:textSize="14sp"
            android:textColor="@android:color/darker_gray"
            android:layout_marginBottom="8dp" />

        <!-- Event Hashtag -->
        <TextView
            android:id="@+id/tv_event_hashtags"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="#EventHashtag"
            android:textSize="14sp"
            android:textColor="@android:color/holo_blue_dark"
            android:layout_marginBottom="16dp" />

        <!-- Buttons for Feedback Form and Live Chat -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <!-- Feedback Button -->
            <Button
                android:id="@+id/btn_feedback"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Feedback Form"
                android:background="@drawable/tag_background"
                android:textColor="@android:color/white"
                android:layout_marginEnd="8dp" />

            <!-- Live Chat Button -->
            <Button
                android:id="@+id/live_chat_button"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Live Chat"
                android:background="@drawable/tag_background"
                android:textColor="@android:color/white"
                android:backgroundTint="@color/colorPrimary" />
        </LinearLayout>
    </LinearLayout>

</androidx.cardview.widget.CardView>
